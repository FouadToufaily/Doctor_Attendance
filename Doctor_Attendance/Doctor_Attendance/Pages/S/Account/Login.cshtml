@page
@model Doctor_Attendance.Pages.S.Account.LoginModel
@{
    ViewBag.Title = "User Login";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Login</h1>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Input.Username">Email Address</label>
                    <input type="text" asp-for="@Model.Input.Username" class="form-control">
                    <span asp-validation-for="@Model.Input.Username" class="text-danger"></span>
                    @if (!string.IsNullOrEmpty(Model.LogInValid) && Model.LogInValid == "This username does not exist")
                    {
                        <span class="text-danger">@Model.LogInValid</span> <!-- Display username error message -->
                    }
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Input.Password">Password</label>
                    <input type="password" asp-for="@Model.Input.Password" class="form-control">
                    <span asp-validation-for="@Model.Input.Password" class="text-danger"></span>
                    @if (!string.IsNullOrEmpty(Model.LogInValid) && Model.LogInValid == "Incorrect Password")
                    {
                        <span class="text-danger">@Model.LogInValid</span> <!-- Display password error message -->
                    }
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" asp-for="@Model.RememberMe" class="form-check-input">
                    <label class="form-check-label" asp-for="@Model.RememberMe">Remember me?</label>
                </div>
                
                <div class="mb-3">
                    <button type="submit" asp-route-Username="@Model.Username" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
