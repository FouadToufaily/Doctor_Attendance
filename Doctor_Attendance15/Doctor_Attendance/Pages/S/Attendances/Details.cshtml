@page
@model Doctor_Attendance.Pages.S.Attendances.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
@*<p>
    @Model.s
</p>*@

<div>
    <h4>Attendance</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attendance.Doctor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attendance.Doctor.Fullname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attendance.Date)
        </dt>
        <dd class="col-sm-10">
            @{
                string dateValue = Model.Attendance.Date.ToShortDateString();
            }
            @Html.DisplayFor(modelItem => dateValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attendance.Dep)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attendance.Dep.DepName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attendance.NbHours)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attendance.NbHours)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attendance.Comments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attendance.Comments)
        </dd>
    </dl>
</div>
<div>
    @if (Model.RoleName.Equals("Admin") || Model.RoleName.Equals("Secretary"))
{
    <a asp-page="./Edit" asp-route-id="@Model.Attendance?.AttId">Edit</a>
}
    <a asp-page="./Index">Back to List</a>
</div>
