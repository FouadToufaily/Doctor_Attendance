@page
@model Doctor_Attendance.Pages.S.Holidays.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Holiday</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Holiday.Date" class="control-label"></label>
                <input asp-for="Holiday.Date" class="form-control" />
                <span asp-validation-for="Holiday.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Holiday.Name" class="control-label"></label>
                <input asp-for="Holiday.Name" class="form-control" />
                <span asp-validation-for="Holiday.Name" class="text-danger"></span>
            </div>
            @if(!String.IsNullOrEmpty(Model.ValidStr))
            {
                @if (!Model.ValidStr.Equals(""))
                {
                    <span class="text-danger">@Model.ValidStr</span>
                }
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
