@page
@model Doctor_Attendance.Pages.S.Faculties.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Faculty</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Faculty.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Faculty.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Faculty.Doctor)
        </dt>
        <dd class="col-sm-10">
            @{
                string parameterValue = @Model.Faculty.Doctor.Firstname + " " + @Model.Faculty.Doctor.Lastname;
            }
            @Html.DisplayFor(modelItem => parameterValue)
        </dd>
    </dl>
</div>
<div>
    @if (Model.RoleName.Equals("Admin"))
    {
     <a asp-page="./Edit" asp-route-id="@Model.Faculty?.Facultyid">Edit</a>    
    }
    
    <a asp-page="./Index">Back to List</a>
</div>
