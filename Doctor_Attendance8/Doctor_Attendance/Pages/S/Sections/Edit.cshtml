@page
@model Doctor_Attendance.Pages.S.Sections.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Section</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Section.Sectionid" />
            <div class="form-group">
                <label asp-for="Section.Doctor" class="control-label"></label>
                <select asp-for="Section.DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                <span asp-validation-for="Section.DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Section.Number" class="control-label"></label>
                <input asp-for="Section.Number" class="form-control" />
                <span asp-validation-for="Section.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Section.PhoneNumber" class="control-label"></label>
                <input asp-for="Section.PhoneNumber" class="form-control" />
                <span asp-validation-for="Section.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Section.Location" class="control-label"></label>
                <input asp-for="Section.Location" class="form-control" />
                <span asp-validation-for="Section.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
