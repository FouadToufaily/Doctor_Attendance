@page "{searchString?}"
@model Doctor_Attendance.Pages.S.Attendances.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Attendances</h1>

<h3>
    <a asp-page="AddAttendance">Add Attendance</a>
</h3>

<form>
    <p>
        Doctor Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<p>
    @Model.s
</p>

<p>@Model.s1</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Attendances[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendances[0].NbHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendances[0].Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendances[0].Dep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendances[0].Doctor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Attendances) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NbHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dep.DepId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.Fullname)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AttId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AttId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AttId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
